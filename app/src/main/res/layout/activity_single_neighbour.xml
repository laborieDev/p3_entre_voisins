<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.neighbour_list.SingleNeighbourActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="411dp"
                android:layout_height="257dp"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="414dp"
                android:layout_height="67dp"
                android:text="UserName"
                android:textAlignment="center"
                android:textSize="20pt"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-2dp"
                tools:layout_editor_absoluteY="267dp" />

            <TextView
                android:id="@+id/user_address"
                android:layout_width="414dp"
                android:layout_height="67dp"
                android:text="UserAddress"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="334dp" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="414dp"
                android:layout_height="67dp"
                android:text="UserPhone"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="389dp" />

            <TextView
                android:id="@+id/user_web"
                android:layout_width="414dp"
                android:layout_height="67dp"
                android:text="UserWeb"
                android:textAlignment="center"
                android:textSize="20pt"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-2dp"
                tools:layout_editor_absoluteY="456dp" />

            <TextView
                android:id="@+id/user_description"
                android:layout_width="414dp"
                android:layout_height="67dp"
                android:text="UserDescription"
                android:textAlignment="center"
                android:textSize="20pt"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="535dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>